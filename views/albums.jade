.view-items.grid-view
  .view-header
    h3.view-heading Sort Albums
  ul
    li.item(ng-repeat="album in data.albums")
      a
        .item-image
          img(ng-src="{{album.coverArtURL || '/static/img/missing-artwork.png'}}")
        .item-info
          .item-info-name {{album.name}}
          .item-info-details {{album.artist}}