.view-sidebar(ng-class="{focused: data.focusedPane == 'list'}")
  .view-sidebar-header
    .search
      input(type="text", placeholder="Search", ng-model="search.list", ng-focus="data.searchFocus = true", ng-blur="data.searchFocus = false")
    .dropdown-wrapper.actions
      a.dropdown-toggle(ng-click="showDropdown = !showDropdown")
        | Sorted By {{ albumSort.name }}
      .dropdown.dropdown-right(ng-class="{show: showDropdown}")
        ul.dropdown-menu
          li
            a(ng-click="setAlbumSort('Artist'); showDropdown = false") Artist
          li
            a(ng-click="setAlbumSort('Title'); showDropdown = false") Title
  list(options="listOptions")
    a
      .item-image
        img(ng-src="{{row.entity.coverArtURL || '/static/img/missing-artwork.png'}}")
      .item-info
        .item-info-name {{row.entity.name}}
        .item-info-details {{row.entity.artist}}
.view-main(ng-class="{focused: data.focusedPane == 'grid'}")
  .view-main-header
    .view-details
      .item-image
        img(ng-src="{{selectedItems.album.coverArtURL || '/static/img/missing-artwork.png'}}")
      .item-info
        .item-info-name {{selectedItems.album.name}}
        .item-info-details {{selectedItems.album.artist}}
          button.button(ng-click="play()") Play All
    .search
      input(type="text", placeholder="Search", ng-model="search.grid", ng-focus="data.searchFocus = true", ng-blur="data.searchFocus = false")
  .view-main-list(ng-grid="gridOptions")
