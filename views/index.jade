doctype html
html
  head
    title
      | Audio Testing
    link(rel="stylesheet", href="static/vendor/nouislider/jquery.nouislider.css")
    link(rel="stylesheet", href="static/css/styles.css")
    body(ng-app="app", ng-controller="main")
    .sidebar
      .sidebar-container
        .sidebar-title Browse
        ul
          li
            a.icon-songs Songs
          li
            a.icon-artists Artists
          li
            a.icon-albums Albums
          li
            a.icon-genres Genres
        .sidebar-title Playlists
          button.button
            span.icon-add
        ul.playlists
          li
            a.icon-playlist Smooth Jams
          li
            a.icon-playlist Hibbity Hoppity
      .now-playing-container(ng-class="{hidden: !nowPlaying}")
        .sidebar-title Now Playing
          button.button.toggle-now-playing
            span.icon-arrow-down
        .now-playing
          .now-playing-info
            .track-name {{ nowPlaying.title }}
            .track-info {{ nowPlaying.artist }} {{ nowPlaying ? '-' : '' }} {{ nowPlaying.album }}
          img.now-playing-artwork(src="static/img/thriller.jpg")
    .main
      .toolbar
        .search
          span.icon-search
          input(type="text", placeholder="Search")
      .media-list(ng-grid="gridOptions")
  .player
    .player-col-side
      button.button
        span.icon-prev(ng-click="previous()")
      button.button.button-circle
        span(ng-click="togglePlayback()", class="{{nowPlaying.playing ? 'icon-pause' : 'icon-play'}}")
      button.button
        span.icon-next(ng-click="next()")
    .player-col-middle
      .progress(ng-class="{hidden: !nowPlaying}")
        .time.time-passed {{ player.currentTime | convertTimestamp }}
        .time.time-remain {{ player.duration | convertTimestamp }}
        .progress-bar-container
          slider
    .player-col-side
      button.button
        span.icon-repeat
      button.button(ng-class="{active: shuffling}", ng-click="shuffle()")
        span.icon-shuffle
      button.button
        span.icon-volume
    script(src="static/js/aurora.js")
    script(src="static/js/flac.js")
    script(src="static/js/mp3.js")
    script(src="static/js/aac.js")
    script(src="static/js/alac.js")
    script(src="/socket.io/socket.io.js")
    script(src="static/vendor/jquery/dist/jquery.min.js")
    script(src="static/vendor/classval/jquery.classval.js")
    script(src="static/vendor/nouislider/Link.js")
    script(src="static/vendor/nouislider/jquery.nouislider.js")
    script(src="static/vendor/angular/angular.js")
    script(src="static/js/ng-grid.js")
    script(src="static/vendor/lodash/dist/lodash.js")
    script(src="static/js/app.min.js")
    script(src="static/js/temp.js")

