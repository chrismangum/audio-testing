.view-main.view-main--songs.focused
  .view-main-header
    .view-details
      .item-info
        .item-info-name {{ params.playlistName }}
        .item-info-details
          ng-pluralize(count="gridOptions.gridData.length", when="{'1': '1 Song', 'other': '{} Songs'}")
        .view-actions
          button.button(ng-click="play()") Play All
    .search
      input(type="text", placeholder="Search", ng-model="search.grid", ng-focus="data.searchFocus = true", ng-blur="data.searchFocus = false")
  .view-main-list(ng-grid="gridOptions")
