.view-sidebar(ng-class="{focused: data.focusedPane == 'list'}")
  .view-sidebar-header
    .search
      input(type="text", placeholder="Search", ng-model="search.list", ng-focus="data.searchFocus = true", ng-blur="data.searchFocus = false")
  list(options="listOptions")
    a
      .item-image
        img(ng-src="{{row.entity.coverArtURL || '/static/img/missing-artwork.png'}}")
      .item-info
        .item-info-name {{row.entity.name}}
        .item-info-details
          ng-pluralize(count="row.entity.albums.length", when="{'1': '1 Album', 'other': '{} Albums'}")
          | ,
          ng-pluralize(count="row.entity.songs.length", when="{'1': '1 Song', 'other': '{} Songs'}")
.view-main(ng-class="{focused: data.focusedPane == 'grid'}")
  .view-main-header
    .view-details
      .item-image
        img(ng-src="{{selectedItems.artist.coverArtURL || '/static/img/missing-artwork.png'}}")
      .item-info
        .item-info-name {{selectedItems.artist.name}}
        .item-info-details
          ng-pluralize(count="selectedItems.artist.albums.length", when="{'1': '1 Album', 'other': '{} Albums'}")
          | ,
          ng-pluralize(count="selectedItems.artist.songs.length", when="{'1': '1 Song', 'other': '{} Songs'}")
        button.button(ng-click="play()") Play All
    .search
      input(type="text", placeholder="Search", ng-model="search.grid", ng-focus="data.searchFocus = true", ng-blur="data.searchFocus = false")
  .view-main-list(ng-grid="gridOptions")
